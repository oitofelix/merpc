<form>
  <h1 style="width: 100%">RDV: Relatório de Despesas de Viagens</h1>
  <label style="width: 100%">Tipo de Despesa
    <select id="tipoDespesa">
      <option></option>
      <option value="R">Reembolso</option>
      <option value="C">Cartão corporativo</option>
      <option value="F">Fundo fixo</option>
      <option value="V">Ajuda de custo de veículo</option>
    </select>
  </label>
  <fieldset id="periodo">
    <legend>Período</legend>
    <fieldset id="inicio" class="date l" style="width: 49%">
      <legend>Início</legend>
    </fieldset>
    <fieldset id="fim" class="date r" style="width: 49%">
      <legend>Fim</legend>
    </fieldset>
  </fieldset>
  <fieldset id="NFCupom">
    <legend>NF/Cupom</legend>
    <fieldset id="data" class="date l" style="width: 49%">
      <legend>Data</legend>
    </fieldset>
    <label style="width: 50%" class="r">Nº Documento
      <input id="NDocumento" class="tr" type="text" maxlength="9"
	     placeholder="000000000" /></label>
    <label style="width: 50%">Valor
      <input id="valor" type="number" step="0.01" placeholder="0.00"/></label>
    <label style="width: 50%">Quantidade
      <input id="quantidade" type="number" step="0.0001"
	     placeholder="0.0000"/></label>
  </fieldset>
  <fieldset id="naturezaDespesa">
    <legend>Natureza da Despesa</legend>
      <select id="tipoNatureza" style="width: 100%">
	<option></option>
	<option value="A">Alimentação</option>
	<option value="H">Hospedagem</option>
	<option value="P">Pedágio</option>
	<option value="C">Combustível</option>
	<option value="O">Outra...</option>
      </select>
      <select id="tipoNaturezaVeiculo" style="width: 100%">
	<option></option>
	<option value="A">Aluguel</option>
	<option value="C">Combustível</option>
	<option value="T">Troca de óleo</option>
	<option value="M">Manutenção...</option>
      </select>
      <fieldset id="itinerario">
	<legend>Itinerário</legend>
	<label style="width: 50%">Origem
	  <input id="origem" type="text" maxlength="100" /></label>
	<label style="width: 50%">Destino
	  <input id="destino" type="text" maxlength="100" /></label>
      </fieldset>
      <input id="outraDespesa" style="width: 100%" type="text" maxlenght="100" />
      <input id="manutencao" type="text" style="width: 100%" maxlength="100" />
      <input id="cidade" style="width: 100%" type="text" maxlength="100" />
  </fieldset>
  <label id="observacoes" style="width: 100%">Observações
    <textarea spellcheck="true"></textarea>
  </label>
  <fieldset id="veiculo">
    <legend>Veículo</legend>
    <label style="width: 50%">Modelo
      <input id="modelo" type="text" /></label>
    <label style="width: 50%">Placa
      <input id="placa" type="text" maxlength="8" placeholder="AAA-0000"/></label>
  </fieldset>
  <label style="width: 20%">
    <input id="incluir" type="button" value="Incluir" />
  </label>
  <label class="r" style="width: 20%">
    <input id="sair" type="button" value="Sair" />
  </label>
</form>
